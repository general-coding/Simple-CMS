<%= error_messages_for(@section) %>

<table summary="Section form fields">
	<tr>
		<th><%= f.label(:page_id, "Page ID") %></th>
		<td><%= f.text_field(:page_id) %></td>
	</tr>
	<tr>
		<th><%= f.label(:name, "Name") %></th>
		<td><%= f.text_field(:name) %></td>
	</tr>
	<tr>
		<th><%= f.label(:position) %>
		<td><%= f.text_field(:position) %></td>
	</tr>
	<tr>
		<th><%= f.label(:visible) %>
		<td><%= f.check_box(:visible) %></td>
	</tr>
	<tr>
		<th><%= f.label(:content_type) %>
		<td>
			<%= f.radio_button(:content_type, 'text') %> Text
			<%= f.radio_button(:content_type, 'HTML') %> HTML
		</td>
	</tr>
	<tr>
		<th><%= f.label(:content) %>
		<td><%= f.text_field(:content) %></td>
	</tr>
</table>